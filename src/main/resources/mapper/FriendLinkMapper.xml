<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myblog.mapper.FriendLinkMapper">
    <!--查询所有友链-->
    <select id="listFriendLink" resultType="com.myblog.entity.FriendLink">
        select * from myblog.t_friends
        order by createTime desc
    </select>

    <!--添加友链-->
    <insert id="saveFriendLink" parameterType="com.myblog.entity.FriendLink">
        insert into myblog.t_friends(id, blogName, blogAddress, pictureAddress, createTime, description)
            values (#{id},#{blogName},#{blogAddress},#{pictureAddress},#{createTime},#{description})
    </insert>

    <select id="getFriendLink" resultType="com.myblog.entity.FriendLink">
        select * from myblog.t_friends where id = #{id}
    </select>

    <!--根据网址查询友链-->
    <select id="getFriendLinkByBlogAddress" resultType="com.myblog.entity.FriendLink">
        select * from myblog.t_friends
        where blogAddress = #{blogAddress}
    </select>

    <!--编辑修改友链-->
    <update id="updateFriendLink" parameterType="com.myblog.entity.FriendLink">
        update myblog.t_friends
        set blogName = #{blogName}, blogAddress = #{blogAddress}, pictureAddress = #{pictureAddress}
        where id = #{id};
    </update>

    <!--删除友链-->
    <delete id="deleteFriendLink">
        delete from myblog.t_friends where id = #{id}
    </delete>
</mapper>