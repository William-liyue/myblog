<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myblog.mapper.UserMapper">
    <resultMap id="resultUser" type="com.myblog.entity.User">
        <id property="id" column="id" />
        <result property="username" column="username" />
        <result property="status" column="status" />
        <result property="password" column="password" />
    </resultMap>
    <!--开发sg_  服务器 t_-->
    <select id="findOne" resultMap="resultUser">
        SELECT * FROM myblog.t_user WHERE username = #{username} AND password = #{password} AND status = 1
    </select>
    <select id="findByName" resultType="com.myblog.entity.User">
        SELECT * FROM myblog.t_user WHERE username = #{username} AND status = 1
    </select>
</mapper>